<UserControl x:Class="WPF.Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="70"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label VerticalAlignment="Center" FontSize="12" Foreground="Black" Grid.Row="0" x:Name="lblName" Content="Pelagić"></Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Foreground="Black" Grid.Row="1" x:Name="lblShirt" Content="18"></Label>
    </Grid>
</UserControl>
   