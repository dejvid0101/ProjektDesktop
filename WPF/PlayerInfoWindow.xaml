<Window x:Class="WPF.PlayerInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="PlayerInfoWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">

            <BeginStoryboard>

                <Storyboard TargetProperty="Width">
                    <DoubleAnimation From="0" To="800" Duration="0:0:0.3"></DoubleAnimation>
                </Storyboard>

            </BeginStoryboard>

        </EventTrigger>


    </Window.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label VerticalAlignment="Center" Grid.Row="0" Content="Name" x:Name="lblName"></Label>
        <Label VerticalAlignment="Center" Grid.Row="1" Content="14" x:Name="lblShirt"></Label>
        <Label VerticalAlignment="Center" Grid.Row="2" Content="Midfielder" x:Name="lblPosition"></Label>
    </Grid>
</Window>
